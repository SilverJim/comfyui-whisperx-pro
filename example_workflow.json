{
  "workflow_name": "WhisperX Transcription and Alignment",
  "description": "Example workflow showing how to use WhisperX nodes with ComfyUI's official audio loader",
  "nodes": [
    {
      "node_type": "Load Audio (ComfyUI Official)",
      "id": 1,
      "inputs": {
        "audio_path": "/path/to/your/audio.wav"
      },
      "outputs": {
        "audio": "Connect to Transcribe and Alignment nodes"
      },
      "notes": "Use ComfyUI's official Load Audio node (e.g., from ComfyUI-Advanced-Audio)"
    },
    {
      "node_type": "WhisperX Transcribe",
      "id": 2,
      "inputs": {
        "audio": "Connect from Load Audio node",
        "model_name": "base",
        "language": "auto",
        "batch_size": 16,
        "device": "auto",
        "compute_type": "float16"
      },
      "outputs": {
        "segments": "Connect to Alignment node",
        "full_text": "Display or process",
        "transcription_info": "View metadata"
      }
    },
    {
      "node_type": "WhisperX Alignment",
      "id": 3,
      "inputs": {
        "audio": "Connect from Load Audio node (same as Transcribe)",
        "input_type": "json",
        "text_input": "Connect from Transcribe node segments output",
        "language": "en",
        "auto_segment": false,
        "max_chars_per_segment": 200,
        "return_char_alignments": false,
        "device": "auto"
      },
      "outputs": {
        "aligned_segments": "Final aligned transcription",
        "word_segments": "Word-level timestamps",
        "alignment_info": "Alignment statistics"
      }
    }
  ],
  "connections": [
    {
      "from": "Load Audio (1).audio",
      "to": "WhisperX Transcribe (2).audio"
    },
    {
      "from": "Load Audio (1).audio",
      "to": "WhisperX Alignment (3).audio"
    },
    {
      "from": "WhisperX Transcribe (2).segments",
      "to": "WhisperX Alignment (3).text_input"
    }
  ],
  "example_output": {
    "word_segments": [
      {
        "word": "Hello",
        "start": 0.52,
        "end": 0.89,
        "score": 0.95
      },
      {
        "word": "world",
        "start": 1.05,
        "end": 1.67,
        "score": 0.97
      }
    ]
  }
}
